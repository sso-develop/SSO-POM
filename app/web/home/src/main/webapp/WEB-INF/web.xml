	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>


	<error-page>
		<error-code>404</error-code>
		<location>/building.jsp</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/400.jsp</location>
	</error-page>
	
	<error-page>
