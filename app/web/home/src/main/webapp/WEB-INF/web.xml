	<!-- 监听器 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>


	<filter>
		<filter-name>ssoFilter</filter-name>
		<filter-class>com.lambert.common.service.facade.filter.SSOFilter</filter-class>
		<init-param>
			<param-name>excludes</param-name>
			<param-value>/login,/static/**,/sockjs-node/**,/favicon.ico,/rpc/**</param-value>
		</init-param>
		<init-param>
			<param-name>sso.server.url</param-name>
			<param-value>http://192.168.0.102:8082/sso</param-value>
		</init-param>
		<init-param>
			<param-name>sso.server.code</param-name>
			<param-value>SSO_LOGIN</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>ssoFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
	
	<!-- 权限控制(选配) -->
	<filter>
		<filter-name>permissionFilter</filter-name>
		<filter-class>com.lambert.common.service.facade.filter.PermissionFilter</filter-class>
		<init-param>
			<param-name>excludes</param-name>
			<param-value>/login,/static/**,/sockjs-node/**,/favicon.ico,/rpc/**,/noPermission.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>sso.server.url</param-name>
			<param-value>http://localhost:8081/sso</param-value>
		</init-param>
		<init-param>
			<param-name>sso.server.code</param-name>
			<param-value>SSO_LOGIN</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>permissionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
